<idea-plugin>
    <id>com.github.bochkarevko.devdays2021</id>
    <name>devdays2021</name>
    <vendor>bochkarevko</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.bochkarevko.devdays2021.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.bochkarevko.devdays2021.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.bochkarevko.devdays2021.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
        <listener class="com.github.bochkarevko.devdays2021.listeners.MyScrolledListener"
                  topic="com.intellij.openapi.editor.event.VisibleAreaListener"/>
    </applicationListeners>

    <actions>
        <group id="MyPlugin.GreetingMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="MyPlugin.Hello" class="com.github.bochkarevko.devdays2021.actions.HelloAction" text="Hello" description="Says hello"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <typedHandler implementation="com.github.bochkarevko.devdays2021.handlers.MyTypedHandler"/>
        <backspaceHandlerDelegate implementation="com.github.bochkarevko.devdays2021.handlers.MyBackSpaceHandler"/>
        <moveLeftRightHandler implementationClass="com.github.bochkarevko.devdays2021.handlers.MyMoveElementLeftRightHandler"/>
    </extensions>
</idea-plugin>
